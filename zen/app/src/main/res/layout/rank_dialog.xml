<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/text_margin">

    <TextView
        android:id="@+id/rank_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/text_margin"
        android:text="@string/rank_dialog_title"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <RatingBar
        android:id="@+id/dialog_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:isIndicator="false"
        android:numStars="4"
        android:paddingBottom="@dimen/text_margin"
        android:rating="2"
        android:stepSize="1.0"
        android:theme="@style/RatingBar"/>

    <Button
        android:id="@+id/rank_dialog_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:focusable="false"
        android:fontFamily="@string/fontFamilyMedium"
        android:text="@string/rank_dialog_rate"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>

</LinearLayout>