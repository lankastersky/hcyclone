<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.hcyclone.zen.view.HelpFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/fontFamilyMedium"
        android:padding="16dp"
        android:text="@string/fragment_help_text"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/fontFamilyLight"
        android:padding="16dp"
        android:text="@string/fragment_help_version"
        android:textSize="16sp"/>

</LinearLayout>
